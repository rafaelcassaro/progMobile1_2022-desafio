<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".activities.DetalhesPedidosActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="#3F51B5"
        android:text="DETALHES DO PEDIDO"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FBF7CD"
        android:text="Pedido:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/detalhe_pedido_tv"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FBF7CD"
        android:text="Mesa:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/mesa_detalhes_tv"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/detalhe_pedido_tv"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:layout_marginEnd="5dp"
        android:background="#FBF7CD"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/mesa_detalhes_tv"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:layout_marginEnd="112dp"
        android:background="#FBF7CD"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detalhes_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumber8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/delete_pedido_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#884040"
        android:text="CANCELAR PEDIDO"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginBottom="18dp"
        android:text="Total:"
        android:textColor="#090000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/delete_pedido_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detalhes_rv" />

    <TextView
        android:id="@+id/editTextNumber8"
        android:layout_width="145dp"
        android:layout_height="35dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="number"
        android:text="textView"
        app:layout_constraintBottom_toTopOf="@+id/delete_pedido_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>